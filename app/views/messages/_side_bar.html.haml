.chat-side
  .side-bar__user-name
    .top-items
      %h3.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__new
        = link_to new_group_path do
          = icon('far','edit')
        %li.top-items__icons__cog
        = link_to edit_user_path(current_user) do
          = icon('fas','cog')
  .side-bar__user-group
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name 
            = group.name
          .group__message 
            = group.show_last_message